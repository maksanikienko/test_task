{% extends 'base.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Сокращение ссылок</title>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Сокращение ссылок</h1>
        <form action="/shorten" method="POST">
            <div class="mb-3">
                <input type="text" name="url" class="form-control" placeholder="Введите URL для сокращения" required>
            </div>
            <button type="submit" class="btn btn-primary">Сократить</button>
        </form>
        {% if shortenedUrl is defined %}
            <div class="mt-4 text-center">
                <p>Сокращенная ссылка: <a href="{{ shortenedUrl }}" target="_blank">{{ shortenedUrl }}</a></p>
            </div>
        {% endif %}
    </div>
</body>
</html>

{% endblock %}
